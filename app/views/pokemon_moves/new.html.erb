<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h4>Add a Pokemon Move for <%= @pokemon.name %></h4>
      <%= simple_form_for [ @pokemon, @pokemon_move ] do |f| %>
        <%= f.input :move, collection: Move.all, input_html: { multiple: true, class: "select2" }, include_hidden: false %>
        <%= f.submit "Teach the move", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
