<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @trainer.banner_url %>');">
  <div class="container">
    <h1><%= @trainer.name %></h1>
  </div>
</div>

<div class="cards mt-3 mx-3">
  <% @trainer.pokemons.each do |pokemon| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= pokemon.image_url %>')">
      <%= pokemon.name %>
      <%= link_to "+", pokemon_path(pokemon), method: :delete, data: { confirm: "Are you sure?"}, class: "card-remove-link" %>

    <div class="card-tags">
      <% pokemon.moves.each do |move| %>
        <span><%= move.name %></span>
      <% end %>
      <%= link_to "+", new_pokemon_pokemon_move_path(pokemon) %>
    </div>
    </div>
  <% end %>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
    <div class="d-flex mt-5 justify-content-between">
      <h4>Add a Pokemon</h4>
      <button class="btn btn-outline-primary toggle-form js-toggle-form">Toggle Form</button>
    </div>
      <%= simple_form_for [ @trainer, @pokemon ] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit "Catch!", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>






